@using Traversal.Core.Models.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Sample" asp-action="Save" class="btn btn-outline-primary">About Ekle</a>
<h3>About Us</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nu</th>
            <th>Title</th>
            <th>Title2</th>
            <th>Açıklamalar</th>
            <th>Açıklamalar2</th>
            <th colspan="2">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Title2</td>
                <td>@item.Description</td>
                <td>@item.Description2</td>
                <td><a asp-controller="Sample" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a asp-controller="Sample" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

